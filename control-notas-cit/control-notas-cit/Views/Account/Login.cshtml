@model IdentitySample.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <!-- start: Meta -->
    <meta charset="utf-8">
    <title>Log-In</title>
    <!-- end: Meta -->
    <!-- start: Mobile Specific -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- end: Mobile Specific -->
    <!-- start: CSS -->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/googlefont.css")" rel='stylesheet' type='text/css'>
    <!-- end: CSS -->
    <!-- start: Favicon -->
    <link rel="shortcut icon" href="img/favicon.ico">
    <!-- end: Favicon -->

    <style type="text/css">
        body {
            background: url(@Url.Content("~/Content/img/bg-login.jpg")) !important;
        }
        ul{
            list-style-type: none;
        }
    </style>
</head>

<body>
    <div class="container-fluid-full">
        <div class="row-fluid">

            <div class="row-fluid">
                <div class="login-box">
                    <div class="icons">
                        <a href="#"><i class="halflings-icon home"></i></a>
                    </div>
                    <h2>Ingresa a tu cuenta</h2>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            @if (ViewBag.error == true)
                            {
                               
                                <div class="container-fluid">
                                    @if (ViewBag.pwd == true) { 
                                        <div class="alert alert-block">
                                             @Html.ValidationSummary(true, "", new { @class = "text-center" })
                                        </div>       
                                    }
                                    <div class="alert alert-block">
                                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-center" })
                                    </div>
                                    <div class="alert alert-block">
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-center" })
                                    </div>
                                </div>
                            }
                            
                            <div class="input-prepend" title="Username">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "input-large span10", placeholder = "Ingresa tu usuario" })
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" title="Password">
                                <span class="add-on"><i class="halflings-icon lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "input-large span10", placeholder = "Ingresa la contraseña" })
                            </div>
                            <div class="clearfix"></div>

                            <div class="container-fluid" style="margin-top:20px;">
                                <button type="submit" class="btn btn-block btn-primary">Entrar</button>
                            </div>
                            <div class="clearfix"></div>
                        </fieldset>
                    }
                </div><!--/span-->
            </div><!--/row-->


        </div><!--/.fluid-container-->

    </div><!--/fluid-row-->


</body>
</html>

