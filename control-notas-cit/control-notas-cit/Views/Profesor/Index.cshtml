@using control_notas_cit.Helpers
@model control_notas_cit.Models.ViewModels.ProfesorIndexViewModel
@{
    ViewBag.Title = "Profesor";
    ViewBag.Seccion = @Model.NombreProfesor + " - " + @Model.Proyecto.Nombre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar{
    @Html.Partial("_SidebarProfesorPartialView")
}

<div class="row-fluid">
    <!-- Calendario -->
    <div class="box span8"></div> 
    <!-- Datos del proyecto -->
    <div class="box black span4" style="color:#333;">
        <div class="box-header" data-original-title="">
            <h2>@Model.Proyecto.Nombre</h2>
        </div>
        <div class="box-content">
            <div class="page-header">
                <h2>@Model.Proyecto.Nombre</h2>
            </div>
            <div class="row-fluid">
                <h3>Profesores del proyecto</h3>
                <ul>
                    @foreach (var profesor in @Model.Proyecto.Profesores.Select(p => new { Nombre = p.Nombre, Apellido = p.Apellido }))
                    {
                        <li><strong>@profesor.Nombre @profesor.Apellido</strong></li>
                    }
                </ul>
            </div>
            <hr />
            <div class="row-fluid">
                <div class="well">
                    <p>@Model.Proyecto.Descripcion</p>
                </div>
            </div>
        </div>
    </div> 
</div>
