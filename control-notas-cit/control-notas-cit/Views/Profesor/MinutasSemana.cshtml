@model IList<control_notas_cit.Models.Entidades.Minuta>
@using control_notas_cit.Models.Entidades
@{
    ViewBag.Title = "MinutasSemana";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar{
    @Html.Partial("_SidebarProfesorPartialView")
}

<!--- La lógica que tiene la vista es para dividir los proyectos de 2 en 2 sin perder el layout --->
@if (Model.Count <= 0)
{
    <div class="alert alert-error">
        <h2>Oops, al parecer aún no se ha subido ninguna minuta en esta semana.</h2>
    </div>
}
else
{
    <div class="row-fluid">
        @{
    int counter = 0;

    foreach (Minuta m in @Model)
    {

        if (counter == 0)
        {
            @Html.Raw("<div class=\"row-fluid\">")
        }
        else if (counter > 0 && counter % 2 == 0)
        {
            @Html.Raw("</div><div class=\"row-fluid\">")
        }

        <div class="box span6">
            @Html.Partial("_MinutaPartialView", m)
        </div>

        counter++;
    }

        }
    </div>
}


